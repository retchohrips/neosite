---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import FediFeed from "@/components/FediFeed";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hello World!</h1>
		<p class="mb-4">
			Welcome to my personal site! I miss when the internet was smaller, and everything wasn't just <a
				class="cactus-link"
				href="https://reddit.com/r/moldymemes">passed between the same 4 sites over and over</a
			>.<br /><br />So, here's my corner of the "old web"!
		</p>
		<SocialList socialWords="You can also find me on:" />
	</section>
	<section class="mt-16" aria-label="Social media feed">
		<h2 class="title mb-4 text-xl">Fedi Feed</h2><FediFeed />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
